<% include ./partials/header %>

    <div class="row d-none d-sm-block">
        <div id="carouselSlides" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active" style="">
              <img class="d-block w-100" src="img/caruselSlide/carusel1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="img/caruselSlide/carusel2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="img/caruselSlide/carusel3.jpg" alt="Third slide">
            </div>
          </div>
        </div>
    </div>
    
<div class="container-fluid">
    
<div class="row">
    <div class="col jumbotron jumbotron-fluid mt-1">
      <h1 class="display-4">Best events over the World!</h1>
      <p>It never was so easy. Type what bring you joy and we`ll find it!</p>
    <div class="row">
        <form action="/show" class="col" method="GET">
        <div class="form-group">
          <div class="input-group">
            <input type="text" class="col-md-6 col-sm-12 form-control" placeholder="Parties or categories" name="event">
            <input class="form-control" id="autocomplete" placeholder="Enter your address" onfocus="geolocate()" type="text" name="location"></input>
            <input type="text" class="col-md-3 form-control d-none d-sm-block" placeholder="Date" name="date">
            <button class="primary">Find</button>
          </div>
        </div> 
        </form>
    </div>
    </div>  
</div>
    
    <div class="row mt-3">
        <% events.forEach(function(events){ %>
         <div class="col-md-4 mb-2">
           <a href="/events/<%=events._id%>">
            <div class="card bg-dark text-white">
              <img class="card-img" src="<%= events.image %>" alt="image">
              <div class="card-img-overlay">
                <h5 class="card-title text-center font-weight-bold"><%= events.name %></h5>
                <p class="card-text text-justify"><%= events.description.substr(0,80) %> . . .</p>
              </div>
            </div>
            </a>
         </div>
        <% }); %> 
    </div>
</div>

    <div class="row mt-3">
        <% category.forEach(function(category){ %>
         <div class="col-md-4 mb-2">
           
            <div class="card bg-dark text-white">
              <img class="card-img" src="<%= category.imgUrl %>" alt="image">
              <div class="card-img-overlay">
                <h5 class="card-title text-center font-weight-bold"><%= category.categoryName %></h5>
              </div>
            </div>
            
         </div>
        <% }); %> 
    </div>
</div>



<table id="address" hidden>
  <tr>
    <td class="label">Street address</td>
    <td class="slimField"><input class="field" id="street_number"
          disabled="true"></input></td>
    <td class="wideField" colspan="2"><input class="field" id="route"
          disabled="true"></input></td>
  </tr>
  <tr>
    <td class="label">City</td>

    <td class="wideField" colspan="3"><input class="field" id="locality"
          disabled="true"></input></td>
  </tr>
  <tr>
    <td class="label">State</td>
    <td class="slimField"><input class="field"
          id="administrative_area_level_1" disabled="true"></input></td>
    <td class="label">Zip code</td>
    <td class="wideField"><input class="field" id="postal_code"
          disabled="true"></input></td>
  </tr>
  <tr>
    <td class="label">Country</td>
    <td class="wideField" colspan="3"><input class="field"
          id="country" disabled="true"></input></td>
  </tr>
</table>

<script src="../../js/geocode.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBPFj-mGrFrz2EVQwKZFTDGi1PZ7dwDqUE&libraries=places&callback=initAutocomplete"async defer></script>
<% include ./partials/footer %>
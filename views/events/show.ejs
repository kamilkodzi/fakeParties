<% include ../partials/header %>

<div class="container mb-4">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">FineParties</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">
                <img class="card-img-top" src="<%=event.image%>">
                <div class="card-body">
                    <h4 class="card-title d-inline-block"><a href="#"><%= event.name %></a></h4> 
                    <h4 class="card-title d-inline-block">Party from: <%=event.dateFrom%> up to: <%=event.dateTo%></h4>
                    <p class="card-text"><%=event.description%></p>
                    
                    <p class="font-italic card-text">Submitted By <a href="/users/<%= event.author.id %>"><%= event.author.username %></a>, <%= moment(event.createdAt).fromNow() %></p>
                    
                        
                    
                    <% if(currentUser && event.author.id.equals(currentUser._id)|| currentUser && currentUser.isAdmin){ %>
                    <div class="row mx-1">
                        <a class="btn btn-warning m-1" href="/events/<%= event._id %>/edit">Edit</a>
                        <form class="m-1" id="delete-form" action="/events/<%= event.id %>?_method=delete" method="POST">
                            <button class="btn btn-danger">Delete</button> 
                        </form>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>


<% include ../partials/footer %>
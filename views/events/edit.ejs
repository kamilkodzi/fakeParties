<% include ../partials/header %>

<div class="container">
   <div class="row">
       <div class="col-md-5 mx-auto">
            <h1 style="text-align: center;">Edit <%= event.name %></h1>
            <div>
                <form action="/events/<%= event._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="event[name]" value="<%= event.name %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="event[price]" value="<%= event.price %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="event[image]" value="<%= event.image %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="event[description]" value="<%= event.description %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-md btn-primary btn-block">Submitt!</button>
                    </div>
                </form>
                <a href="/">Go back</a>
            </div>
                
            
        </div>
   </div>
</div>

<% include ../partials/footer %>
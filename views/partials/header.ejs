<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link rel="stylesheet" href="https://bootswatch.com/4/sketchy/bootstrap.min.css">
    <title>FineParties</title>
  </head>
  <body>
<nav  class="navbar navbar-expand-md navbar-light bg-light">
 <div class="container-fluid pl-0 pr-0">
     <a class="navbar-brand ml-1" href="/">Fineparties</a>
     <button style="height: 40px;" class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
       <span class="navbar-toggler-icon"></span>
     </button>
     <div class="collapse navbar-collapse" id="navbarResponsive">
       <ul class="navbar-nav ml-auto">
           
        <% if(!currentUser){ %>
             <li class="nav-item active">
               <a class="nav-link" href="#">Create event</a>
             </li>
            <li class="nav-item">
               <a class="nav-link" href="/register">Sing in</a>
             </li>
            <li class="nav-item">
               <a class="nav-link" href="/login">Log in</a>
             </li>
         <% }else{ %>
            <li><a class="nav-link" href="#">
            <% if(currentUser && currentUser.isAdmin){%>
            [admin] 
            <% } %>
            <%= currentUser.username %></a></li>
            <li class="nav-item"><a class="nav-link" href="/logout">Log out</a></li>
         <% } %> 
       </ul>
     </div>
 </div>
</nav>
<div class="container">
    <% if(error && error.length>0) { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
    <% } %>
    <% if(success && success.length>0) { %>
    <div class="alert alert-success" role="alert">
      <%= success %>
    </div>
    <% } %>
</div>